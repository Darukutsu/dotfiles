        $XDG_CONFIG_HOME/sxhkd/rofi_launcher.sh clipboard

#
# BSPWM HOTKEYS
#

# toggle windows transparency
#super + {equal,minus}
#	$XDG_CONFIG_HOME/sxhkd/opacity.sh active {on,off}

# make sxhkd reload its configuration files:
super + Escape
	killall "sxhkd"; sxhkd &

# quit/restart bspwm
super + shift + Escape
	bspc wm -r
#super + {_,shift +}h
#	bspc {quit,wm -r}

# close and kill
alt + q
	bspc node -c
ctrl + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
#super + f
#	bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

#
# state/flags
#

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# hide focused window
super + h : h
        notify-send --hint int:transient:1 "sxhkd" "Hide mode enabled"; \
	bspc node -g hidden

# unhide/show all hidden windows on current desktop
super + h : a
	xdotool key Escape; \
        bspc node any.local.hidden -g hidden=off
       
# unhide/show one hidden window on current desktop
super + h : u
        xdotool key Escape; \
        $XDG_CONFIG_HOME/sxhkd/rofi_launcher.sh hidden-window

# make window appear in below level to be able to record
# with OBS xcomposite, because bspwm unmaps workspaces on lost focus
