ble-bind -m 'vi_imap' -f C-RET accept-line
ble-bind -m 'vi_imap' -f S-RET newline

ble-bind -m 'vi_nmap' -f m vi-command/backward-char
ble-bind -m 'vi_nmap' -f l vi_nmap/insert-mode
ble-bind -m 'vi_nmap' -f n vi-command/forward-line
ble-bind -m 'vi_nmap' -f e vi-command/backward-line
ble-bind -m 'vi_nmap' -f i vi-command/forward-char
ble-bind -m 'vi_nmap' -f h vi-command/set-mark
ble-bind -m 'vi_nmap' -f k vi-command/search-repeat
ble-bind -m 'vi_nmap' -f j vi-command/forward-vword-end


