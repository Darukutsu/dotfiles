ble-bind -m 'vi_omap' -f n vi-command/forward-line
ble-bind -m 'vi_omap' -f e vi-command/backward-line
ble-bind -m 'vi_omap' -f i vi-command/forward-char
ble-bind -m 'vi_omap' -f h vi-command/set-mark
ble-bind -m 'vi_omap' -f k vi-command/search-repeat
ble-bind -m 'vi_omap' -f j vi-command/forward-vword-end


